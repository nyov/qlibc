prefix		= @prefix@
exec_prefix	= @exec_prefix@

## Name
PRGNAME		= qlibc

## Static Library Name
LIBNAME		= lib${PRGNAME}.a

## Shared Library Name
SLIBVERSION	= 2
SLIBNAME	= lib${PRGNAME}.so
SLIBREALNAME	= ${SLIBNAME}.${SLIBVERSION}

## System library directory
LIBDIR		= @libdir@
HEADERDIR	= @includedir@

## Which compiler & options for release
CC		= @CC@
CFLAGS		= @CFLAGS@
CPPFLAGS	= @CPPFLAGS@

## Utilities
AR		= @AR@
ARFLAGS		= -rc
CHMOD		= @CHMOD@
INSTALL		= @INSTALL@
INSTALL_DATA	= @INSTALL_DATA@
LN_S		= @LN_S@
RANLIB		= @RANLIB@
RM		= @RM@

## Objects List
OBJ		= \
		containers/qlist.o		\
		containers/qlisttbl.o		\
		containers/qhashtbl.o		\
		containers/qhasharr.o		\
		containers/qvector.o		\
		containers/qqueue.o		\
		containers/qstack.o		\
						\
		utilities/qcount.o		\
		utilities/qencode.o		\
		utilities/qfile.o		\
		utilities/qhash.o		\
		utilities/qio.o			\
		utilities/qlibc.o		\
		utilities/qsocket.o		\
		utilities/qstring.o		\
		utilities/qsystem.o		\
		utilities/qtime.o		\
						\
		ipc/qsem.o			\
		ipc/qshm.o			\
						\
		extensions/qconfig.o		\
		extensions/qlog.o		\
		extensions/qhttpclient.o	\
		extensions/qdatabase.o		\
						\
		internal/qinternal.o		\
		internal/md5/md5c.o

## Make Library
all: qlibc

qlibc: ${OBJ}
	${AR} ${ARFLAGS} ${LIBNAME} ${OBJ}
	${RANLIB} ${LIBNAME}
	${CC} -shared -Wl,-soname,${SLIBREALNAME} -o ${SLIBREALNAME} ${OBJ}
	${LN_S} -f ${SLIBREALNAME} ${SLIBNAME}

install: all
	${INSTALL_DATA} qlibc.h ${HEADERDIR}/qlibc.h
	${INSTALL_DATA} ${LIBNAME} ${LIBDIR}/${LIBNAME}
	${INSTALL_DATA} ${SLIBREALNAME} ${LIBDIR}/${SLIBREALNAME}
	${LN_S} -f ${LIBDIR}/${SLIBREALNAME} ${LIBDIR}/${SLIBNAME}

deinstall: uninstall
uninstall:
	${RM} -f ${HEADERDIR}/qlibc.h
	${RM} -f ${LIBDIR}/${LIBNAME}
	${RM} -f ${LIBDIR}/${SLIBREALNAME}
	${RM} -f ${LIBDIR}/${SLIBNAME}

doc:
	doxygen doxygen.conf

cleandoc:
	${RM} -rf ../doc/html

clean:
	${RM} -f ${OBJ} ${LIBNAME} ${SLIBREALNAME} ${SLIBNAME}

## Compile
.c.o:
	${CC} ${CFLAGS} ${CPPFLAGS} -c -o $@ $<
